<Window x:Class="Async.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Async"
        mc:Ignorable="d"
        Title="Асинхронные делегаты" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="tbInc" ToolTip="Инкремент" HorizontalAlignment="Left" Height="25" Margin="25,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="tbDec" ToolTip="Декремент" HorizontalAlignment="Left" Height="25" Margin="25,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="tbIncRes" IsReadOnly="True" HorizontalAlignment="Left" Height="230" Margin="141,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96"/>
        <TextBox x:Name="tbDecRes" IsReadOnly="True" HorizontalAlignment="Left" Height="230" Margin="242,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105"/>
        <Button x:Name="button" Content="Запуск" HorizontalAlignment="Left" Height="38" Margin="25,107,0,0" VerticalAlignment="Top" Width="82" Click="button_Click"/>
        <TextBox x:Name="tbDif" IsReadOnly="True" HorizontalAlignment="Left" Height="230" Margin="352,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
