<UserControl x:Class="NaturalHabitat.AnimalType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NaturalHabitat"
             mc:Ignorable="d" Width="115" Height="140"
             Background="White" MouseDoubleClick="AnimalType_OnMouseDoubleClick">
    <GroupBox Name="GroupBox" 
              BorderThickness="3" BorderBrush="Black" 
              Margin="5,5,5,5">
        <Grid Background="White" Margin="0,10,0,4">
            <ProgressBar Name="PbPopulation" 
                         Minimum="0" Height="30" Width="73" Margin="10,54,0,10" 
                         HorizontalAlignment="Left"/>
            <TextBox Name="TextBlockPop"  Text="" IsReadOnly="True" SelectionOpacity="0"
                     VerticalContentAlignment="Center" HorizontalContentAlignment ="Center" HorizontalAlignment="Center"
                     BorderThickness="0" Height="30" Margin="32,54,31,10" Width="30"
                     Background="Transparent"/>
        </Grid>
    </GroupBox>
</UserControl>
