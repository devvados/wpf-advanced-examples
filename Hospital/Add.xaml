<Window x:Class="Hospital.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        Title="Добавить пациента в очередь" Height="183.656" Width="340.704">
    <Grid Margin="0,0,2,0">
        <TextBox x:Name="tbId" ToolTip="Введите имя пациента" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="30" Margin="31,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175"/>
        <Button x:Name="bAdd" Content="Добавить" HorizontalAlignment="Left" Margin="31,84,0,0" Width="90" Height="30" VerticalAlignment="Top" Click="bAdd_Click"/>
        <Button x:Name="bClose" Content="Закрыть" HorizontalAlignment="Left" Margin="136,84,0,0" Width="70" VerticalAlignment="Top"  Click="bClose_Click" Height="30" RenderTransformOrigin="0.5,0.5"/>
        <CheckBox x:Name="chCondition" Content="Здоров" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="30" Margin="219,36,0,0" VerticalAlignment="Top" Width="86"/>
    </Grid>
</Window>
