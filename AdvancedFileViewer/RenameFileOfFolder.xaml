<Window x:Class="AdvancedFileViewer.RenameFileOfFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedFileViewer"
        mc:Ignorable="d"
        Title="Переименовать" Height="192.857" Width="300">
    <Grid>
        <Label x:Name="LabInfo" Content="Введите новое имя:" HorizontalAlignment="Left" Height="30" Margin="39,22,0,0" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="TbNewName" HorizontalAlignment="Left" Height="30" Margin="39,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" PreviewTextInput="TbNewName_OnPreviewTextInput"/>
        <Button x:Name="ButOk" Content="ОК" HorizontalAlignment="Left" Height="30" Margin="75,109,0,0" VerticalAlignment="Top" Width="125" Click="ButOK_Click"/>

    </Grid>
</Window>
